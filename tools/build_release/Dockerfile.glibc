# tools/build_release/Dockerfile.glibc
ARG OS_BASE=debian:bookworm-slim
FROM ${OS_BASE}

RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    libpcre3-dev \
    zlib1g-dev \
    libssl-dev \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"
RUN cargo install cbindgen

ARG NGINX_VERSION=1.28.2

WORKDIR /build
RUN curl -fsSL "https://nginx.org/download/nginx-${NGINX_VERSION}.tar.gz" | tar xz

# Copy source
COPY . /src

WORKDIR /src
RUN rm -rf components/rust-converter/target
RUN make build

WORKDIR /build/nginx-${NGINX_VERSION}
RUN ./configure --with-compat --add-dynamic-module=/src/components/nginx-module \
    && make modules

RUN mkdir /out \
    && cp objs/ngx_http_markdown_filter_module.so /out/ngx_http_markdown_filter_module.so
